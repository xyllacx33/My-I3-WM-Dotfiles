general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "volume master"
order += "memory"
order += "cpu_usage"
order += "time"

volume master {
    format = "VOL: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

memory {
    format = "RAM: %used / %total"
}

cpu_usage {
    format = "CPU: %usage"
}

time {
    format = "%T %d/%m/%Y "
}
